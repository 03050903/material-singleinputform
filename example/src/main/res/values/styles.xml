<resources>

	<style name="AppThemeDark" parent="Theme.AppCompat">
		<item name="sifStyle">@style/SingleInputFormStyle.Holo.Dark</item>
	</style>

	<style name="AppThemeLight" parent="Theme.AppCompat.Light">
		<item name="sifStyle">@style/SingleInputFormStyle.Holo.Light</item>
	</style>

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="sifStyle">@style/AppTheme.SingleInputFormStyle</item>
	</style>

	<style name="AppTheme.SingleInputFormStyle" parent="SingleInputFormStyle">
		<item name="sifButtonNextIcon">@drawable/ic_action_next_item</item>
		<item name="sifButtonFinishIcon">@drawable/ic_action_accept</item>

		<item name="sifTextFieldBackgroundColor">@color/custom_text_field_background_color</item>
		<item name="sifProgressBackgroundColor">@color/custom_progress_background_color</item>
		<item name="sifEditTextBackgroundColor">@color/custom_edit_text_background_color</item>


		<item name="sifTitleTextColor">@color/custom_title_text_color</item>
		<item name="sifDetailsTextColor">@color/custom_details_text_color</item>
		<item name="sifInputTextColor">@color/custom_input_text_color</item>
		<item name="sifErrorTextColor">@color/custom_error_text_color</item>

		<item name="sifBetterPickerStyle">@style/AppTheme.BetterPickerTheme</item>
	</style>

	<style name="AppTheme.BetterPickerTheme" parent="BetterPickersDialogFragment.Light">
		<item name="bpTitleDividerColor">@color/custom_bp_color</item>
		<item name="bpKeyboardIndicatorColor">@color/custom_bp_color</item>
		<item name="bpKeyBackground">@drawable/custom_bp_key_background</item>
		<item name="bpButtonBackground">@drawable/custom_bp_button_background</item>
	</style>

</resources>
